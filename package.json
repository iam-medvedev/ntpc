{
  "name": "ntpc",
  "version": "1.0.0",
  "license": "WTFPL",
  "description": "Tiny NTP Client",
  "repository": "https://github.com/iam-medvedev/ntpc.git",
  "homepage": "https://github.com/iam-medvedev/ntpc#readme",
  "bugs": "https://github.com/iam-medvedev/ntpc/issues",
  "author": "Ilya Medvedev <ilya@medvedev.im>",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "NODE_ENV=production tsx build.ts",
    "build:types": "NODE_ENV=production tsc --emitDeclarationOnly --declaration --outDir dist",
    "commit": "yarn git-cz --disable-emoji",
    "postinstall": "husky install",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^18.16.16",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.17.19",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3",
    "vitest": "^0.32.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "volta": {
    "node": "18.6.0"
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "yarn@3.6.0"
}
