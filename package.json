{
  "name": "ntpc",
  "version": "1.0.0",
  "license": "WTFPL",
  "description": "Tiny NTP Client",
  "repository": "https://github.com/iam-medvedev/ntpc.git",
  "homepage": "https://github.com/iam-medvedev/ntpc#readme",
  "bugs": "https://github.com/iam-medvedev/ntpc/issues",
  "author": "Ilya Medvedev <ilya@medvedev.im>",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "NODE_ENV=production bun build.ts",
    "build:types": "NODE_ENV=production tsc --emitDeclarationOnly --declaration --outDir dist",
    "commit": "bun run git-cz --disable-emoji",
    "postinstall": "husky install",
    "types": "tsc --noEmit"
  },
  "dependencies": {
    "micro-packed": "^0.8.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^11.0.5",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/bun": "^1.2.21",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.25.9",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "typescript": "^5.9.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
